@page
@{
    ViewData["Title"] = "Favourites";
    ViewData["ActivePage"] = ManageNavPages.Favourites;
    ;
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        <p>Your Favourite Decks</p>
        <!--Show user favorites-->
<div class="row">
            @foreach (var item in Model.UserFavourites)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img class="card-img-top" src="@item.Deck.ImageUrl" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Deck.Name</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-page="./Details" asp-route-id="@item.Deck.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                    <a asp-page="./Edit" asp-route-id="@item.Deck.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-page="./Delete" asp-route-id="@item.Deck.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}