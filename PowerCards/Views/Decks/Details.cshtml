
@model PowerCards.ViewModels.DeckViewModel


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="card">
    <div class="card-header">
        Deck Details
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Deck.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Deck.Title)
            </dd>
        </dl>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        Cards in this Deck
    </div>
    <div class="card-body">
        @if (Model.Deck.Cards != null && Model.Deck.Cards.Any())
        {
            <ul>
                @foreach (var card in Model.Deck.Cards)
                {
                    <li>@card.Question - @card.Answer</li>
                }
            </ul>
        }
        else
        {
            <p>No cards available for this deck.</p>
        }
    </div>
</div>

<!-- Begin Card Creation Form -->
<div class="card mt-4">
    <div class="card-header">
        Create a Card for this Deck
    </div>
    <div class="card-body">
        <form asp-action="Create" asp-controller="Cards" method="post">
            <input type="hidden" value="@Model.Deck.DeckID" name="DeckID" />

            <!-- Card Question Input -->
            <div class="form-group">
                <label asp-for="Card.Question">Question</label>
                <input asp-for="Card.Question" class="form-control" placeholder="Enter the question..." />
                <span asp-validation-for="Card.Question" class="text-danger"></span>
            </div>

            <!-- Card Answer Input -->
            <div class="form-group">
                <label asp-for="Card.Answer">Answer</label>
                <input asp-for="Card.Answer" class="form-control" placeholder="Enter the answer..." />
                <span asp-validation-for="Card.Answer" class="text-danger"></span>
            </div>

            <!-- Other card properties can be added similarly -->

            <button type="submit" class="btn btn-primary">Add Card</button>
        </form>
        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }

    </div>
</div>
<!-- End Card Creation Form -->
