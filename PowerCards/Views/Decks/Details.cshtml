@model PowerCards.ViewModels.DeckViewModel
@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager
@{
    ViewData["Title"] = "Details";
}
@if (SignInManager.IsSignedIn(User) && UserManager.GetUserId(User) == Model.Deck.UserName)
{
    <div class="d-flex justify-content-end">
        <a asp-action="Edit" asp-route-id="@Model.Deck.DeckID" class="btn btn-primary">Edit</a>
    </div>
}
<section class="p-5">
    <div class="p-2">
        <h1>@Html.DisplayFor(model => model.Deck.Title)</h1>
        <small>@Html.DisplayFor(model => model.Deck.Description)</small>
        <h6>Created by: @Html.DisplayFor(model => model.Deck.UserName)</h6> 
    </div>
    <div>
        <!--Add to favorites user-->
        @if (SignInManager.IsSignedIn(User))
        {
        <form asp-action="AddToFavorites" asp-controller="Favorites" method="post">
            <input type="hidden" name="UserName" value="@UserManager.GetUserId(User)" />
            <input type="hidden" name="DeckID" value="@Model.Deck.DeckID" />
            <button type="submit" class="btn btn-primary">Add to Favorites</button>
        </form>
        }

  

         
       
    </div>


    <div class="mt-4">
        <div class="card-header">
            Cards in this Deck
        </div>
        <div class="card-body">
            @if (Model.Deck.Cards != null && Model.Deck.Cards.Any())
            {
                foreach (var card in Model.Deck.Cards)
                {
                    <div class="row mb-4">
                        <!-- Question Card -->
                        <div class="col-md-5">
                            <div class="card bg-dark text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Question</h5>
                                    <p class="card-text">@card.Question</p>
                                </div>
                            </div>
                        </div>

                        <!-- Answer Card -->
                        <div class="col-md-5">
                            <div class="card">
                                <div class="card-body hidden-answer">
                                    <h5 class="card-title">Answer</h5>
                                    <p class="card-text">@card.Answer</p>
                                </div>
                                <button class="toggle-answer-btn">Show Answer</button>
                            </div>
                        </div>
                        <!-- only user who created the card can edit and delete-->
                        @* @if (SignInManager.IsSignedIn(User) && UserManager.GetUserId(User) == Model.Deck.UserName)
                        {
                *@
                            <!-- Edit & Delete Actions -->
                            <div class="col-md-2 align-items-center">
                                <div class="w-100">
                                    <div class="mb-2">
                                        <a asp-controller="Cards" asp-action="Edit" asp-route-id="@card.CardID" class="btn btn-primary w-100">
                                            <i class="bi bi-pen">Edit</i>
                                        </a>

                                    </div>
                                    <div>
                                        <a asp-controller="Cards" asp-action="Delete" asp-route-id="@card.CardID" class="btn btn-danger w-100">
                                            <i class="bi bi-trash">Delete</i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        @*}      *@
                    </div>
                }
            }
            else
            {
                <!-- Display a message if no cards are available for this deck -->
                <p>No cards available for this deck.</p>
            }
        </div>
    </div>
    <!-- Cards Display end-->
    <!-- Only Username who created the card can add cards-->
        <!-- Begin Card Creation Form -->
        <div class="card mt-4">
            <div class="card-header">
                Add a New Card
            </div>
            <div class="card-body">
                <form asp-controller="Cards" asp-action="CreateFromDeckDetails" method="post">
                    <input type="hidden" asp-for="Card.DeckID" />
                    <div class="form-group">
                        <label asp-for="Card.Question">Question</label>
                        <input asp-for="Card.Question" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Card.Answer">Answer</label>
                        <input asp-for="Card.Answer" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Add Card</button>
                </form>
            </div>
        </div>

    <!-- End Card Creation Form -->


    <div class="d-flex justify-content-between pt-3">

            <a asp-controller="Decks" asp-action="Delete" asp-route-id="@Model.Deck.DeckID" class="btn btn-danger">Delete Deck</a>

    </div>
</section>


