@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager
@{
    ViewData["Title"] = "Home Page";
}

<section class="bg-dark text-white">
    <article id="home" class="bg-dark text-white">
        <div class="container-fluid p-0">
            <div class="row">
                <div class="col">
                    <div id="carouselImages" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="2" aria-label="Slide 0"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/image/caroimg3.jpg.jpg" class="d-block w-100" alt="Person sitting">
                                <div class="overlay position-absolute top-50 start-50 translate-middle">
                                    <h1 class="display-2 bold-text">Welcome to PowerCards </h1>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img src="~/image/caroimg1.jpg.jpg" class="d-block w-100 img-fluid" alt="Fried Chicken Leg">
                                <div class="overlay position-absolute top-50 start-50 translate-middle">
                                    <h1 class="display-2 bold-text">We provide tools</h1>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img src="~/image/caroimg2 (2).jpg" class="d-block w-100 img-fluid" alt="Tacos">
                                <div class="overlay position-absolute top-50 start-50 translate-middle">
                                    <h1 class="display-2 bold-text">to help you reach your goal!</h1>
                                </div>
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselImages" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselImages" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </article>
    <article>
        <div class="container pt-5 pb-5 mt-5">
            <div class="row">
                <div class="col d-flex flex-column align-items-center justify-content-center">
                    <h1 class="pb-1 display-3">Create flashcards</h1>
                    <p class="info-text text-break p-1">
                        PowerCards is here to help you achieve your goals flashcards by flashcards. Why not try creating a new deck?
                        By clicking on the the Create new Deck button below, you will be able to create a new deck and add flashcards to it.
                        You can also view other users' decks and add them to your favourites.

                    </p>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a class="nav-link btn btn-primary text-white" asp-area="" asp-controller="Decks" asp-action="Index">Create New Deck</a>
                    }
                    else
                    {
                        <a class="nav-link btn btn-primary text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Create New Deck</a>
                    }
                </div>
                <div class="col d-flex flex-column align-items-center justify-content-center">
                    <img src="~/image/flashcard.jpg" class="img-fluid p-3" alt="A photo of a flashcard" style="height: 70%">
                </div>
            </div>
        </div>
    </article>
</section>

